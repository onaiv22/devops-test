data "aws_iam_policy_document" "assume-role-policy" {
  statement {
    actions = ["sts:AssumeRole"]

    principals {
      type        = "Service"
      identifiers = ["ec2.amazonaws.com"]
    }
  }
}

data "aws_iam_policy_document" "s3_repository_policy" {
  statement {
    actions = [
      "s3:ListBucket",
      "s3:GetObject",

    ]

    resources = [
      "arn:aws:s3:::wipro-repository",
    ]
  }

resource "aws_iam_policy" "s3_repository_policy" {
   name   = "${var.project}-${var.environment}-s3-repository-policy"
   path   = "/"
   policy = data.aws_iam_policy_document.s3_repository_policy.json
}

resource "aws_iam_policy_attachment" "s3_repository_policy_project" {
   name       = "ec2-s3-repository-policy"
   roles      = [aws_iam_role.ec2_account.name]
   policy_arn = aws_iam_policy.s3_repository_policy.arn
}

resource "aws_iam_role" "ec2_account" {
   name                 = "ec2-role"
   path                 = "/"
   assume_role_policy   = data.aws_iam_policy_document.assume-role-policy.json
}
